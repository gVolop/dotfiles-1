[user]
    name = yamadapc
    email = tacla.yamada@gmail.com
[core]
    editor = mvim -f -g -v
    excludesfile = ~/.gitignore
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    d = difftool
[diff]
    tool = mvimdiff -f -g -v
[difftool]
    prompt = false
[push]
    default = simple
[merge]
    tool = mvimdiff -f -g -v
